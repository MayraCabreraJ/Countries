<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Countries.Views.CountriesPage"
    xmlns:controls ="clr-namespace:Countries.Controls.HorizontalList"
    xmlns:templates ="clr-namespace:Countries.Views.Template"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    BackgroundColor="{StaticResource BackgroundColor}"
    xmlns:lottie="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
    Title="Countries">

    <ContentPage.Resources>
        <ResourceDictionary>
             
            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="12, 0" />
            </Style>

            <Style TargetType="controls:HorizontalList">
                <Setter Property="Margin" Value="12, 0" />
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="search"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BindingContext="{Binding Country}">
                
  <!--OnClick="LottieView_OnClick"-->

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Text="{Binding Name}"></Label>

                    <lottie:AnimationView
                        Grid.Row="1"
                        x:Name="LottieView" 
                        Animation="heart.json" 
                        Loop="False" 
                        AutoPlay="False"
                        Speed="1.5"
                        IsVisible="False">
                     

                    </lottie:AnimationView>

                    <StackLayout Grid.Row="2">
                        <Label 
                            Text="Countries" 
                            Style="{StaticResource TitleStyle}">
                            <Label.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="Android" Value="12, 0" />
                                    <On Platform="iOS"  Value="12, 12, 12, 0" />
                                </OnPlatform>
                            </Label.Margin>
                        </Label>

                        <controls:HorizontalList
                            ListOrientation="Horizontal"
                            ItemsSource="{Binding Countries}"
                            HeightRequest="70">
                            <controls:HorizontalList.ItemTemplate>
                                <DataTemplate>
                                    <templates:FlagTemplate/>
                                </DataTemplate>
                            </controls:HorizontalList.ItemTemplate>
                        </controls:HorizontalList>

                        <!--Africa-->
                        <Label
                            Text="Africa" 
                            Style="{StaticResource TitleStyle}">

                        </Label>
                        <controls:HorizontalList
                            ListOrientation="Horizontal"
                            ItemsSource="{Binding Africa}"
                            HeightRequest="70">
                            <controls:HorizontalList.ItemTemplate>
                                <DataTemplate>
                                    <templates:FlagTemplate/>
                                </DataTemplate>
                            </controls:HorizontalList.ItemTemplate>
                        </controls:HorizontalList>

                        <!--Americas-->
                        <Label
                            Text="Americas" 
                            Style="{StaticResource TitleStyle}">

                        </Label>
                        <controls:HorizontalList
                            ListOrientation="Horizontal"
                            ItemsSource="{Binding Americas}"
                            HeightRequest="70">
                            <controls:HorizontalList.ItemTemplate>
                                <DataTemplate>
                                    <templates:FlagTemplate/>
                                </DataTemplate>
                            </controls:HorizontalList.ItemTemplate>
                        </controls:HorizontalList>

                        <!--Asia-->
                        <Label
                            Text="Asia" 
                            Style="{StaticResource TitleStyle}">

                        </Label>
                        <controls:HorizontalList
                            ListOrientation="Horizontal"
                            ItemsSource="{Binding Asia}"
                            HeightRequest="70">
                            <controls:HorizontalList.ItemTemplate>
                                <DataTemplate>
                                    <templates:FlagTemplate/>
                                </DataTemplate>
                            </controls:HorizontalList.ItemTemplate>
                        </controls:HorizontalList>
                        
                        <!--Europe-->
                        <Label
                            Text="Europe" 
                            Style="{StaticResource TitleStyle}">

                        </Label>
                        <controls:HorizontalList
                            ListOrientation="Horizontal"
                            ItemsSource="{Binding Europe}"
                            HeightRequest="70">
                            <controls:HorizontalList.ItemTemplate>
                                <DataTemplate>
                                    <templates:FlagTemplate/>
                                </DataTemplate>
                            </controls:HorizontalList.ItemTemplate>
                        </controls:HorizontalList>
                        
                        <!--Oceania-->
                        <Label
                            Text="Oceania" 
                            Style="{StaticResource TitleStyle}">

                        </Label>
                        <controls:HorizontalList
                            ListOrientation="Horizontal"
                            ItemsSource="{Binding Oceania}"
                            HeightRequest="70">
                            <controls:HorizontalList.ItemTemplate>
                                <DataTemplate>
                                    <templates:FlagTemplate/>
                                </DataTemplate>
                            </controls:HorizontalList.ItemTemplate>
                        </controls:HorizontalList>



                    </StackLayout>

                </Grid>
                
                




            </StackLayout>
        </ScrollView>
        
            
        </ContentPage.Content>
</ContentPage>